kind: ConfigMap
apiVersion: v1
metadata:
  name: "{{ ansible_operator_meta.name }}-firewalld-config"
  namespace: "{{ ansible_operator_meta.namespace }}"
data:
  r9s-external.xml: |
    <?xml version="1.0" encoding="utf-8"?>
    <zone>
{% for item in firewall.outside.services %}
      <service name="{{ item }}"/>
{% endfor %}
      <masquerade/>
      <forward/>
    </zone>
  r9s-internal.xml: |
    <?xml version="1.0" encoding="utf-8"?>
    <zone target="ACCEPT">
      <forward/>
    </zone>
